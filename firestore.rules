rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin()    { return request.auth != null && request.auth.token.admin == true; }

    // Public leaderboard
    match /leaderboards/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Signed-in reads elsewhere
    match /tournaments/{tid} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /players/{pid}     { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /teams/{tid}       { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /matches/{mid}     { allow read: if isSignedIn(); allow write: if isAdmin(); }

    // Lineups: owner or admin
    match /lineups/{id} {
      allow read:  if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.ownerUid);
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == request.resource.data.ownerUid);
    }

    match /{document=**} { allow read, write: if false; }
  }
}
